<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qinbin.news" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.qinbin.news.WelcomeActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            >

        </activity>

        <activity android:name="com.qinbin.news.GuideActivity"  android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.qinbin.news.NewsDetailActivity"   android:theme="@android:style/Theme.Holo.Light.NoActionBar" />
        <activity android:name="com.qinbin.news.MainActivity"
            android:theme="@style/Theme.PageIndicatorDefaults">

        </activity>
    </application>

</manifest>
